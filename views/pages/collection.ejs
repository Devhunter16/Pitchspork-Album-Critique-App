<% layout("partials/boilerplate") %>

<h1 style="color: #f3f4f2">All Albums</h1>
<% for (let record of records) { %>
<div class="card mb-3" style="border-color: #8cb6b5; background-color:#f3f4f2;">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= record.coverArtImg %>">
        </div>
        <div class="col-md-8" style="border-color: #8cb6b5">
            <div class="card-body">
                <h5 class="card-title">
                    <a style="color: #496682; font-size: 2.5rem;" href="/viewInfo/<%= record._id %>">
                        <%= record.albumName %>
                    </a>
                </h5>
                by
                <% for (let i=0; i < artists.length; i++) { %>
                <% if (record.artistName==artists[i].name) { %>
                <p class="card-text">
                    <a style="color: #496682" href="/showArtist/<%= artists[i]._id %>">
                        <%= artists[i].name %>
                    </a>
                </p>
                <% } %>
                <% } %>
                : <%= record.rating %>/10

            </div>
        </div>
    </div>
</div>
<% } %>